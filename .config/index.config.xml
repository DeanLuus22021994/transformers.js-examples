<?xml version="1.0" encoding="UTF-8"?>
<devDebtConfig xmlns="http://schemas.transformers-js.org/dev-debt/config">
	<enabled>true</enabled>
	<documentationFormat>
		<templatePath>../../.github/instructions/format_dev_debt_docs.instructions.md</templatePath>
		<outputDirectory>../../docs/dev-debt</outputDirectory>
	</documentationFormat>
	<tracking>
		<directories>
			<directory>
				<path>../../.copilot</path>
				<priority>high</priority>
				<includeSubdirectories>true</includeSubdirectories>
			</directory>
			<directory>
				<path>../../.vscode</path>
				<priority>medium</priority>
				<includeSubdirectories>true</includeSubdirectories>
			</directory>
			<directory>
				<path>../../.github</path>
				<priority>high</priority>
				<includeSubdirectories>true</includeSubdirectories>
			</directory>
		</directories>
		<filePatterns>
			<include>*.js</include>
			<include>*.ts</include>
			<include>*.json</include>
			<include>*.md</include>
			<include>*.yml</include>
			<include>*.yaml</include>
		</filePatterns>
		<ignoredPatterns>
			<pattern>**/node_modules/**</pattern>
			<pattern>**/dist/**</pattern>
			<pattern>**/.git/**</pattern>
		</ignoredPatterns>
	</tracking>
	<analysis>
		<scanFrequency>weekly</scanFrequency>
		<thresholds>
			<complexity>high</complexity>
			<duplication>medium</duplication>
			<maintenance>high</maintenance>
		</thresholds>
	</analysis>
	<reporting>
		<generateSummaryReport>true</generateSummaryReport>
		<notifyOnNewItems>true</notifyOnNewItems>
		<assignmentStrategy>team-rotation</assignmentStrategy>
	</reporting>
	<integration>
		<linkToIssueTracker>true</linkToIssueTracker>
		<useLabelForTracking>tech-debt</useLabelForTracking>
	</integration>
</devDebtConfig>