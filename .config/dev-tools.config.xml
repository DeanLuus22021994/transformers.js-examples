<?xml version="1.0" encoding="UTF-8"?>
<config version="1.0.0">
  <!-- Add version attribute to track configuration changes -->
  <devDebt>
    <enabled>true</enabled>
    <autoProcess>true</autoProcess>
    <generateTemplates>true</generateTemplates>
    <delaySeconds>30</delaySeconds>
    <strictValidation>true</strictValidation>
    <templates>
      <default>../templates/dev-debt/template.md</default>
      <featureRequest>../templates/dev-debt/feature-request.md</featureRequest>
      <bugFix>../templates/dev-debt/bug-fix.md</bugFix>
      <refactoring>../templates/dev-debt/refactoring.md</refactoring>
    </templates>
  </devDebt>
  <maintenance>
    <enabled>true</enabled>
    <autoCleanNodeModules>false</autoCleanNodeModules>
    <pruneUnusedDependencies>false</pruneUnusedDependencies>
    <runLinters>true</runLinters>
  </maintenance>
  <testing>
    <enabled>true</enabled>
    <autoRunTests>false</autoRunTests>
    <gpuTestsEnabled>true</gpuTestsEnabled>
    <generateTestsForNewCode>true</generateTestsForNewCode>
  </testing>
  <retrospective>
    <enabled>false</enabled>
    <autoGenerate>false</autoGenerate>
    <includeMetrics>true</includeMetrics>
    <storageLocation>./reports/retrospectives</storageLocation>
  </retrospective>
  <auditTrail>
    <enabled>true</enabled>
    <logConfigChanges>true</logConfigChanges>
    <retentionDays>90</retentionDays>
    <notifyOnChange>false</notifyOnChange>
  </auditTrail>
  <environments>
    <development>
      <devDebt>
        <autoProcess>true</autoProcess>
      </devDebt>
      <testing>
        <autoRunTests>true</autoRunTests>
      </testing>
    </development>
    <production>
      <devDebt>
        <autoProcess>false</autoProcess>
      </devDebt>
      <testing>
        <autoRunTests>false</autoRunTests>
      </testing>
    </production>
    <ci>
      <devDebt>
        <autoProcess>false</autoProcess>
      </devDebt>
      <testing>
        <autoRunTests>true</autoRunTests>
      </testing>
    </ci>
  </environments>
  <currentEnvironment>development</currentEnvironment>
  <projectOverrides>
    <project path="dean-transformers/janus-pro-webgpu">
      <testing>
        <gpuTestsEnabled>true</gpuTestsEnabled>
        <testTimeout>120000</testTimeout>
      </testing>
    </project>
    <project path="dean-transformers/next-server">
      <devDebt>
        <strictValidation>false</strictValidation>
      </devDebt>
    </project>
  </projectOverrides>
  <integrations>
    <github>
      <enabled>true</enabled>
      <createIssuesFromDevDebt>true</createIssuesFromDevDebt>
      <linkPullRequestsToIssues>true</linkPullRequestsToIssues>
    </github>
    <docker>
      <enabled>true</enabled>
      <configPath>../.copilot/docker-integration/config.json</configPath>
      <syncSettings>true</syncSettings>
    </docker>
    <azureDevOps>
      <enabled>false</enabled>
    </azureDevOps>
  </integrations>
  <notifications>
    <enabled>true</enabled>
    <channels>
      <vscode>true</vscode>
      <email>false</email>
      <slack>false</slack>
    </channels>
    <events>
      <devDebtCreated>true</devDebtCreated>
      <testsFailed>true</testsFailed>
      <configChanged>true</configChanged>
    </events>
  </notifications>
</config>