{
  "name": "terminal-tracer",
  "version": "1.0.0",
  "description": "Terminal tracing system for enhanced debugging and traceability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "terminal-trace": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "trace": "node dist/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:azure": "node --experimental-vm-modules node_modules/jest/bin/jest.js azure-solution-insight",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "analyze:dev-debt": "powershell -ExecutionPolicy Bypass -File ./CodeBriefAnalysis/analyze-dev-debt.ps1",
    "create:dev-debt": "powershell -ExecutionPolicy Bypass -Command \"Import-Module ./CodeBriefAnalysis/Dev-Debt.psm1; New-DevDebtFile -Directory ./\"",
    "toggle:dev-debt": "node ./scripts/toggle-feature.js devDebt",
    "toggle:maintenance": "node ./scripts/toggle-feature.js maintenance",
    "toggle:testing": "node ./scripts/toggle-feature.js testing",
    "toggle:retrospective": "node ./scripts/toggle-feature.js retrospective"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "@types/uuid": "^9.0.2",
    "@types/yargs": "^17.0.24",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}