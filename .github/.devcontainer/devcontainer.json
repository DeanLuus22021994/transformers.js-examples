{
	"name": "Runner Dev Environment",
	"dockerComposeFile": "../debt-management/docker/docker-compose.yml",
	"service": "debt-scanner",
	"workspaceFolder": "/repo",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"moby": true
		},
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.21"
		}
	},
	"runArgs": [
		"--gpus=all"
	],
	"containerEnv": {
		"PYTHONOPTIMIZE": "1"
	},
	"forwardPorts": [
		3000
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"golang.go"
			]
		}
	}
}